$ cat script1.sh
#!/bin/bash

# Let's assume we have a variable representing a student's score
echo "Hello! What's your score?"
read score

# Using if statements with multiple conditions to determine the grade
if [ "$score" -ge 90 ]; then
    grade="A"
elif [ "$score" -ge 80 ]; then
    grade="B"
elif [ "$score" -ge 70 ]; then
    grade="C"
elif [ "$score" -ge 60 ]; then
    grade="D"
else
    grade="F"
fi

# Output the grade
echo "The student's grade is: $grade"


